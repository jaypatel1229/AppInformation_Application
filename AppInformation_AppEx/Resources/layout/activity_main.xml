<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#2B7C85"
    >

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Theme Info"
        android:id="@+id/buttonAI"
        android:layout_margin="10dp"
        android:backgroundTint="#DB1F48"
        android:textColor="#ffffff"/>

       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
        
        android:id="@+id/textViewAI1"/>
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
         
        android:id="@+id/textViewAI2"/>
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
         
        android:id="@+id/textViewAI3"/>
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
         
        android:id="@+id/textViewAI4"/>

</LinearLayout>